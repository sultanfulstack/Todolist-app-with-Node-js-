
<%include ../views/partials/header%>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/todo/add">
            <div class="form-group">
                <label for="">Todo name</label>
                <input type="text "  class="form-control" name="text" placeholder="type the name of the todo">
            </div>
            <div class="form-group">
                <label for=""> body</label>
                <textarea name="body"  class="form-control" placeholder="your text"></textarea>
            </div>
            <br>
            <button class="btn btn-primary btn-block" type ="submit">SUbmit</button>

        </form>
    </div>
    <div class="col-md-6">
        <ul class="list-group">
            <%todos.forEach(function(todo){%>
            <li class="list-group-item"> <%=todo.text%>- <%=todo.body%>
                <a  class="btn btn-primary"href="/todo/edit/<%=todo._id%>/" >Edit</a>
                <a  data-id="<%=todo._id%>" href="#" class="delete-todo btn btn-danger">Delete</a>
            </li>
            <% })%>
        </ul>

    </div>
</div>




<%include ../views/partials/footer%>